@using System.Data

@model System.Data.DataTable


@{
    Layout = null;

}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CityIndex</title>
    <style>
        

        #addcreatebtn {
            align-items: center;
            justify-content: center;
            display: flex;
        }
    </style>
   
</head>
<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/brands.min.css" integrity="sha512-8RxmFOVaKQe/xtg6lbscU9DU0IRhURWEuiI0tXevv+lXbAHfkpamD4VKFQRto9WgfOJDwOZ74c/s9Yesv3VvIQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <div class="container">
        <form class="main" name="cityform" method="post">
       <table class="table table table-hover table-dark">
                <thead>
                    <tr>
                        @*<th>#</th>*@
                        <th scope="col">City Name</th>
                        <th scope="col">Country Name</th>
                        <th scope="col">isActive</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                @{
                    if (Model.Rows.Count > 0)
                    {
                     foreach (DataRow dr in Model.Rows)
                        {
                          <tbody>
                                <tr>
                                    <td>@dr["city_name"].ToString()</td>
 
                                    <td>@dr["country_name"].ToString()</td>
                                    <td>

                                        @if (dr["isActive"].ToString() == "True")
                                        {
                                            <i class="fa-solid fa-circle-check fa-lg text-success"></i>}
                                        else
                                            {<i class="fa-solid fa-circle-xmark fa-lg text-danger"></i>}

                                    </td>
                                     <td>
                                     <div class="d-grid gap-2 d-md-block">

                                     <a href="~/City/CityEdit?city_id=@dr["city_id"]" class="btn btn-outline-success"><i class="fa-solid fa-pen-to-square fa-lg"></i></a>
                                                            <a href="~/City/Delete?city_id=@dr["city_id"]" class="btn btn-outline-danger"> <i class="fa-solid fa-trash fa-lg-danger"></i> </a>
                                                        </div>
                                                    </td>

                                                </tr>
                            </tbody>

                            }

                        }
                }

            </table>
       </form>
        @Html.ActionLink("Add New Record", "CityCreate", "button", new { @class = "btn btn-primary", id = "addcreatebtn" })

    </div>
</body>
</html>
