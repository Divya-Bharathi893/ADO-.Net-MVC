
@model System.Data.DataTable
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditCityIndex</title>
    <style>
        .formate {
            align-items: center;
            justify-content: center;
            display: grid;
            padding: 100px;
            position: center;
        }

        .outerbox {
            border-style: double;
            border: 2px solid #808080;
            border-radius: 5px;
            align-items: center;
            justify-content: center;
            display: grid;
            margin: 80px;
        }
    </style>

</head>
<body>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


    <div class="outerbox container">
        <form method="post" action="@Url.Action("UpdateRecord")">



            <div class=formate>

                <div class="mb-3">

                    <input type="hidden" name="city_id" class="form-control" id="city_id"  value="@Model.Rows[0]["city_id"]">
                </div>



                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Country Name</label>
                    @Html.DropDownList("country", null, " --select-- ", htmlAttributes: new { @class = "form-select selectpicker"})
                </div>
           
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">City Name</label>
                    <input type="text" name="city_name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" checked required  value="@Model.Rows[0]["city_name"]">
                    <div id="emailHelp" class="form-text">please enter your city</div>

                </div>



                <div class="mb-3 form-check">
                    @if (Model.Rows[0]["isActive"].ToString() == "True")
                    {
                    <input type="checkbox" class="form-check-input" name="isActive" id="exampleCheck1"checked>
                    }
                    else
            {
                <input type="checkbox" class="form-check-input" name="isActive" id="exampleCheck1"> 
            }
                    <label class="form-check-label" for="exampleCheck1">isActive</label>
                   

                </div>

                <div>
                    <input type="Submit" value="Submit" name="action" id="Submit" class="btn btn-primary">
                </div>

            </div>
        </form>

    </div>
</body>
</html>



